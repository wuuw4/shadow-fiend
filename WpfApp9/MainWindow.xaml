<Window x:Class="WpfApp9.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp9"
        mc:Ignorable="d"
        Title="Авторизация" MinHeight="450" MinWidth="800" FontFamily=" comic Sans ms">

    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <Label Margin="5">
                Введите логин
            </Label>
            <TextBox Margin="5" Name="tbLogin">
            </TextBox>
            <Label Margin="5">
                Введите пароль
            </Label>
            <PasswordBox Margin="5" Name="tbPassword">
            </PasswordBox>
            <Button Margin="5" Name="btnVvod" Click="btnVvod_Click">
              ВВВВОйти
            </Button>
            <Button Margin="5" Name="btnVvodGuest" Click="btnVvodGuest_Click">
                Войти как гость
            </Button>
        </StackPanel>
    </Grid>
</Window>
    